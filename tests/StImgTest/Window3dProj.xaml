<Window x:Class="StImgTest.Window3dProj"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StImgTest"
        mc:Ignorable="d"
        Title="Window3dProj" Height="321.676" Width="457.803">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <Image x:Name="img"></Image>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Slider x:Name="sliderZ" Minimum="1" Maximum="400" Value="5" Width="100" ValueChanged="sliderZ_ValueChanged"></Slider>
            <TextBlock x:Name="lblZVal" Width="30"></TextBlock>
            <Slider x:Name="rotX" Minimum="0" Maximum="360" Value="0" Width="100" ValueChanged="rotX_ValueChanged" ></Slider>
            <TextBlock x:Name="lblXRot" Width="30"></TextBlock>
            <Slider x:Name="rotY" Minimum="0" Maximum="360" Value="0" Width="100" ValueChanged="rotY_ValueChanged" ></Slider>
            <TextBlock x:Name="lblYRot" Width="30"></TextBlock>
        </StackPanel>
    </Grid>
</Window>
